<h1>Sign In</h1>

<form class="form-horizontal" action="/session" method="post">
	<div class="form-group">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label>Email<br>
    <input name="user[username]" class="form-control" type="text"><br>
  </label><br>
  <label>Password<br>
    <input name="user[password]" class="form-control" type="password"><br>
  </label><br>
  <button type="submit" value="Submit" class="btn btn-primary">Sign In</button><br>
	
	<!-- GUEST LOG IN BREAKS REGULAR LOG IN -->
