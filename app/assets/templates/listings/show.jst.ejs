<a href="/#/restaurants/<%= restaurant.id %>" data-id="<%= restaurant.id %>">
<div class="row carousel-row">
  <div class="col-xs-8 col-xs-offset-2 slide-row">
      <div id="carousel-1" class="carousel slide slide-carousel" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <li data-target="#carousel-1" data-slide-to="0" class="active"></li>
          <li data-target="#carousel-1" data-slide-to="1"></li>
          <li data-target="#carousel-1" data-slide-to="2"></li>
        </ol>
      
        <!-- Wrapper for slides -->
        <div class="carousel-inner">
          <div class="item active">
              <img src="http://lorempixel.com/150/150?rand=1" alt="Image">
          </div>
          <div class="item">
              <img src="http://lorempixel.com/150/150?rand=2" alt="Image">
          </div>
          <div class="item">
              <img src="http://lorempixel.com/150/150?rand=3" alt="Image">
          </div>
        </div>
      </div>
			<a href="/#/restaurants/<%= restaurant.id %>" data-id="<%= restaurant.id %>">
      <div class="slide-content">
          <a href="/#/restaurants/<%= restaurant.id %>" data-id="<%= restaurant.id %>">
             <h3><%= restaurant.escape("name") %></h3>
						 <% if (rating === 1) { %>
						 	<img class="listingrating" src="assets/1star.png">  
						 <% } else if (rating === 1.5) { %>
						 	<img class="listingrating" src="assets/15stars.png">
						 <% } else if (rating === 2) { %>
						 	<img class="listingrating" src="assets/2stars.png" >
						 <% } else if (rating === 2.5) { %>
						 	<img class="listingrating" src="assets/25stars.png">
						 <% } else if (rating === 3) { %>
						 	<img class="listingrating" src="assets/3stars.png" >
						 <% } else if (rating === 3.5) { %>
						 	<img class="listingrating" src="assets/35stars.png">
						 <% } else if (rating === 4) { %>
						 	<img class="listingrating" src="assets/4stars.png" >
						 <% } else if (rating === 4.5) { %>
						 	<img class="listingrating" src="assets/45stars.png">
						 <% } else if (rating === 5) { %>
						 	<img class="listingrating" src="assets/5stars.png" >
						 <% } else if (isNaN(rating)) {%>
						 	<h4>Be the first to review this restaurant!</h4>
						 <% } %>
						 
						 <h5><%= restaurant.escape("address") %></h5>
						 
      </div>
  </div>
</div>
</a>
